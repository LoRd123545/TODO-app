<h2><%= task.name %></h2>
<form action="/tasks/<%= task.id %>/edit?_method=PUT" method="post">
  <label>
    <span>Nazwa zadania</span>
    <div>
      <input type="text" name="name" placeholder="<%= task.name %>"/>
    </div>
  </label>
  <label>
    <span>Opis zadania</span>
    <div>
      <textarea name="description" maxlength="500">
        <%= task.description %>        
      </textarea>
    </div>
  </label>
  <label>
    <span>termin wykonania zadania</span>
    <div>
      <input type="datetime-local" id="due-date" name="completion_date" step="1"/>
    </div>
  </label>
  <label>
    <span>status zadania</span>
    <div class="select">
      <select name="status" id="status"  >
        <option value="not-started">Not Started</option>
        <option value="in-progress">In Progress</option>
        <option value="done">Done</option>
      </select>

    </div>
  </label>
  <br>
  <button class="button">zaaktualizuj</button>
</form>

<script>
  document.getElementById('status').value = '<%= task.status %>';
  document.getElementById('due-date').value = '<%= task.completion_date %>';

</script>
